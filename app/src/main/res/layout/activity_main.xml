<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="mySum"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/result"
        android:layout_margin="16dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32dp" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64dp" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_C"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/gri"
                android:onClick="myC"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button_open"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/gri"
                android:onClick="myOpen"
                android:text="("
                android:textColor="@color/black"
                android:textSize="32dp" />


            <Button
                android:id="@+id/button_close"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/gri"
                android:onClick="myClose"
                android:text=")"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button_div"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/SARI"
                android:onClick="myDiv"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_seven"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnSayiTık"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button_eight"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnSayiTık"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button_nine"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnSayiTık"
                android:text="9"

                android:textColor="@color/black"
                android:textSize="32dp" />


            <Button
                android:id="@+id/button_multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/SARI"
                android:onClick="myMultiply"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_four"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnSayiTık"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button_five"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnSayiTık"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button_six"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnSayiTık"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="32dp" />


            <Button
                android:id="@+id/button_minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/SARI"
                android:onClick="myMinus"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_one"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnSayiTık"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnSayiTık"

                android:text="2"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"

                android:background="@drawable/button_shape"
                android:onClick="btnSayiTık"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="32dp" />


            <Button
                android:id="@+id/button_sum"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/SARI"
                android:text="+"
                android:textColor="@color/black"

                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_ac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/gri"

                android:onClick="myAC"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button_zero"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnSayiTık"

                android:text="0"
                android:textColor="@color/black"
                android:textSize="32dp" />


            <Button
                android:id="@+id/button_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/gri"
                android:onClick="myDot"
                android:text="."
                android:textColor="@color/black"
                android:textSize="32dp" />

            <Button
                android:id="@+id/button_equal"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/SARI"
                android:onClick="myEqual"
                android:text="="
                android:textColor="@color/black"
                android:textSize="32dp" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>